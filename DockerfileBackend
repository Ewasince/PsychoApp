ARG GO_BACKEND_EXECUTABLE=psychoapp
ARG APP_FOLDER=/app
ARG GO_BACKEND_EXE_PATH=$APP_FOLDER/$GO_BACKEND_EXECUTABLE

FROM golang:1.22-bookworm AS go_backend-builder

ARG GO_BACKEND_EXE_PATH

ENV GOPATH=/root/go

WORKDIR /opt

ADD go.mod go.sum ./
ADD telegram_state_bot telegram_state_bot
RUN --mount=type=cache,mode=0755,target=/root/go \
    go mod download

COPY environment environment
COPY storage storage
COPY backend backend
RUN --mount=type=cache,mode=0755,target=/root/.cache/go-build \
    go build -o $GO_BACKEND_EXE_PATH backend/main.go

FROM frolvlad/alpine-glibc AS go_backend-runner

ARG GO_BACKEND_EXECUTABLE
RUN apk add --no-cache tzdata
ARG APP_FOLDER
ARG GO_BACKEND_EXE_PATH

WORKDIR $APP_FOLDER
COPY --from=go_backend-builder  $GO_BACKEND_EXE_PATH $GO_BACKEND_EXECUTABLE
COPY migrations migrations

ENV GO_BACKEND_EXE_PATH=$GO_BACKEND_EXE_PATH

CMD $GO_BACKEND_EXE_PATH